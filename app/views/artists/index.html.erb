<p id="notice"><%= notice %></p>

<h1>Listing Artists</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Bio</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= artist.bio %></td>
        <td><%= artist.genre_id %></td>
         <td><%= artist.genre.name %></td>
        <td><%= link_to 'Show', artist, :class =>'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist), :class =>'btn btn-warning'%></td>
        <td><%= link_to 'Destroy', artist,:class =>'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_artist_path, :class =>'btn btn-primary' %>
<%=will_paginate @artists, renderer:BootstrapPagination::Rails %>