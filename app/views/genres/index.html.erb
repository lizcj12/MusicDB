<p id="notice"><%= notice %></p>

<h1>Listing Genres</h1>

<table class="table table-striped"
  <thead>
    <tr>
       <th>Type</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        
        <td><%= genre.name %></td>
        <td><%= link_to 'Show', genre, :class =>'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_genre_path(genre), :class =>'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', genre, :class =>'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Genre', new_genre_path, :class =>'btn btn-primary' %>
<%=will_paginate @genres, renderer:BootstrapPagination::Rails %>