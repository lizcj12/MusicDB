<p id="notice"><%= notice %></p>

<h1 background-color: >Listing Songs</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Genre</th>
      <th>Artist</th>
       <th>Album</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.genre.name %></td>
        <td><%= song.artist.name %></td>
         <td><%= song.album.title %></td>
        <td><%= link_to 'Show', song, :class =>'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_song_path(song), :class => 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', song, :class => 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song', new_song_path, :class =>'btn btn-primary' %>
<%=will_paginate @songs, renderer:BootstrapPagination::Rails %>
